--- button.button: Next
role: primary
medium: true
$on-click$: message-host $pre-deployment-check-api

-- object pre-deployment-check-api:
function: http
method: post
url: /-/fpm-controller-ui.fly.dev/api/pre-deployment-check/
team: $query.team
package-name: $package-name
base-url: $base-url
$package-name-error: $package-name-error
$base-url-error: $base-url-error









-- ftd.column form-field:
string label:
string placeholder:
optional string error-msg:
optional string field-type: text
width: fill
align: center
margin-top: $fpm.space.space-4


--- ftd.text: $label
role: $fpm.type.copy-tight
color: $fpm.color.main.text
margin-bottom: $fpm.space.space-2

--- ftd.input:
width: fill
role: $fpm.type.copy-tight
