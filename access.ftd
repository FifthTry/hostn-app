--- container: ftd.main

--- ftd.column:
width: fill

--- access-loop: $obj.member-name
billing: $obj.manage-billings
team: $obj.manage-teams
sites: $obj.manage-sites
is-active: $obj.is-active
$loop$: $acceslist as $obj



-- ftd.column access-loop:
width: fill
caption member-name:
boolean sites:
boolean team: 
boolean billing:
boolean is-active:
boolean not-changed: true
/padding-vertical: 14
/padding-horizontal: 24

--- ftd.row:
width: fill
id: first-column

--- ftd.row:
width: fill
border-color if $is-active: $fpm.color.main.cta-secondary.base
border-width if $is-active: 2
border-radius: 10
padding-vertical: 20

/--- ftd.boolean: $not-changed

--- ftd.text: $member-name
role: $fpm.type.copy-relaxed
color: $fpm.color.main.text
width: fill
text-align: center

;; MANAGE SITES
/--- ftd.input:
type: checkbox
width: fill

--- ftd.text: ALLOWED
if: $sites
role: $fpm.type.copy-relaxed
color: $fpm.color.main.success.text
width: fill
text-align: center
$on-click$: toggle $sites
$on-click$: $not-changed = false

--- ftd.text: FORBIDDEN
if: not $sites
role: $fpm.type.copy-relaxed
color: $fpm.color.main.error.border
width: fill
text-align: center
$on-click$: toggle $sites
$on-click$: $not-changed = false

;; MANAGE BILLINGS
/--- ftd.input:
type: checkbox
width: fill

--- ftd.text: ALLOWED
if: $billing
role: $fpm.type.copy-relaxed
color: $fpm.color.main.success.text
width: fill
text-align: center
$on-click$: toggle $billing
$on-click$: $not-changed = false

--- ftd.text: FORBIDDEN
if: not $billing
role: $fpm.type.copy-relaxed
color: $fpm.color.main.error.border
width: fill
text-align: center
$on-click$: toggle $billing
$on-click$: $not-changed = false


;; MANAGE TEAMS
/--- ftd.input:
type: checkbox
width: fill

--- ftd.text: ALLOWED
if: $team
role: $fpm.type.copy-relaxed
color: $fpm.color.main.success.text
width: fill
text-align: center
$on-click$: toggle $team
$on-click$: $not-changed = false

--- ftd.text: FORBIDDEN
if: not $team
role: $fpm.type.copy-relaxed
color: $fpm.color.main.error.border
width: fill
text-align: center
$on-click$: toggle $team
$on-click$: $not-changed = false

--- button.button: Delete
role: primary
medium: true
move-right: 50
$on-click$: $selected-team-member = $member-name
$on-click$: message-host $delete-team-member-access-api

--- button.button: Update
/if: not $not-changed
role: primary
medium: true
move-right: 50
/disabled: $not-changed
$on-click$: $selected-team-member = $member-name
$on-click$: $selected-manage-teams = $team
$on-click$: $selected-manage-billings = $billing
$on-click$: $selected-manage-sites = $sites
$on-click$: message-host $update-team-member-access-api

-- object update-team-member-access-api:
function: http
method: post
url: /-/fpm-controller-ui.fly.dev/api/update-team-member-access/
team: $query.team
team-member: $selected-team-member
manage-teams: $selected-manage-teams
manage-billings: $selected-manage-billings
manage-sites: $selected-manage-sites

-- object delete-team-member-access-api:
function: http
method: post
url: /-/fpm-controller-ui.fly.dev/api/delete-team-member-access/
team: $query.team
team-member: $selected-team-member

-- object add-team-member-access-api:
function: http
method: post
url: /-/fpm-controller-ui.fly.dev/api/add-team-member-access/
team: $query.team
team-member-email: $current-new-team-member-email