if: { site-name !=  NULL }
role: $inherited.types.heading-medium
color: $inherited.colors.text-strong

-- ftd.image:
if: { site-name == NULL }
src: $site-logo
width.fixed.px: 120
height: auto
link: index.html

-- end: ftd.row


-- ftd.row:
align-content: right
padding-top if { site-name != NULL }: 16
padding-top if { site-name == NULL }: 8
spacing.px: 24

-- button.button: Deploy Controller UI
if: { debug }
role: tertiary
medium: true
$on-click$: $deploy-fpm-controller-ui-api()

-- button.button: Deploy Controller Service
if: { debug }
role: tertiary
medium: true
$on-click$: $deploy-controller-service-api()

-- end: ftd.row

-- ftd.column:
if: { show-profile-menu }
width.fixed.px: 160
background.solid: $inherited.colors.background.base
border-width.px: 1
border-color: $inherited.colors.border
padding-horizontal.px: 12
padding-vertical.px: 12
anchor: parent
right.px: 0
top.px: 25
$on-mouse-enter$: $ftd.set-bool($a = $show-profile-menu, v = true)
$on-mouse-leave$: $ftd.set-bool($a = $show-profile-menu, v = false)

-- end: ftd.column

-- ftd.column:
width: fill-container-container
border-bottom.px: 1
border-color: $inherited.colors.border
padding-bottom.px: 12

-- ftd.text: $username
if: { username != NULL }
role: $inherited.types.fine-print
color: $inherited.colors.text
margin-top.px: 16

