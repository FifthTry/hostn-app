-- boolean selected-manage-billings: true

-- boolean selected-manage-teams: true

-- ftd.text: $selected-team-member
if: $debug

-- ftd.boolean: $selected-manage-sites
if: $debug

-- ftd.boolean: $selected-manage-billings
if: $debug

