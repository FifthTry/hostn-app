if: $debug

-- record side-site-data:
string site-name:
string url:
boolean is-active:

-- record site-access:
caption member-name:
boolean manage-sites:
boolean manage-teams:
boolean manage-billings:
boolean is-active:

-- record site-access-data:
page-1.team list teams:
page-1.side-site-data list sites-list:
